<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.event.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="before">
                <field name="contenant_id"/>
                <field name="longueur"/>
                <field name="largeur"/>
                <field name="hauteur"/>
                <field name="volume"/>
                <field name="unite_volume"/>
                <!--<field name="poids"/>-->
                <!--<field name="unite_poids"/>-->
            </xpath>
            <!--<field name="product_id" position="attributes">-->
                <!--<attribute name="domain">[('est_contenant', '=', False), ('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]</attribute>-->
            <!--</field>-->
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="after">
                <field name="poids"/>
                <field name="unite_poids"/>
            </xpath>
        </field>
    </record>
</odoo>
